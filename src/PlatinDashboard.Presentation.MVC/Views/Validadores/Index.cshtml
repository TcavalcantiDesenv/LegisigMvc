@model IEnumerable<PlatinDashboard.Domain.Entities.Validadores>

@{
    ViewBag.Title = "Index";
}
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")
}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Validadores</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />

<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">Cadastro de Validadores</h4>
        <a href="@Url.Action("Create", "Validadores")" class="btn btn-success pull-right">
            <i class="fa icon-plus"></i> Cadastrar
        </a>

    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered table-responsive-sm datatable dataTable no-footer" id="companiesTable">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdCliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuário)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Operacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @*@for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="col-md-6">*@
                            @*@Html.DropDownListFor(modelItem => item.Id, new SelectList(ViewBag.Clientes, "Value", "Text", item.Id), string.Empty, null)*@
                            @*@Html.DropDownListFor(modelItem => item.Id, new SelectList(ViewBag.Clientes, "Value", "Text"))*@
                            @*@Html.DropDownListFor(modelItem => item.Id, new SelectList(ViewBag.Clientes, "RazaoSocial", "Id", item.Id), new { @class = "form-control" })*@
                            @*</div>
                        }*@
                            @Html.DisplayFor(modelItem => item.IdCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuário)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Operacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="text-right">
                            <a class="btn btn-success" data-toggle="tooltip" data-placement="right" ToolTip="My tooltip text" href="@Url.Action("Edit", "Validadores", new { id = item.Id })">
                                <i class="fa fa-edit "></i>
                            </a>
                            <a class="btn btn-warning" href="@Url.Action("Details", "Validadores", new { id = item.Id })">
                                <i class="fa fa-file-archive-o "></i>
                            </a>
                            <a class="btn btn-danger" href="@Url.Action("Delete", "Validadores", new { id = item.Id })">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section modals{
    <div id="modal-section">

    </div>
}
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/viewsjs/companyindex.js"></script>
    <script src="~/Scripts/viewsjs/changeclient.js"></script>
    <script>
        $(document).ready(function () {
            loadClientes();
            initializeCompanyTable();
        });
    </script>

}

