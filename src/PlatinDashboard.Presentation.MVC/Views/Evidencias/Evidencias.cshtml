@using PagedList.Mvc;
@model PagedList.IPagedList<Model.Entity.Conformidade>
@{
    ViewBag.Title = "LegiSig| Portal Legisig";
}
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")

    <style>
        /* for table */
        .as_td tr td {
            /*width: 80px;*/
            text-align: justify;
            font-size: 10px;
        }

            /* for label and span inside td */
            .as_td tr td label, span {
                width: 100px;
            }

            /* for input text control inside td */
            .as_td tr td input[type=text] {
                width: 200px;
            }

            /* for dropdown control inside td */
            .as_td tr td select {
                width: 300px;
            }
    </style>
}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Painel Geral</a>
        </li>
        <li class="breadcrumb-item active">Gestão Legal - @ViewBag.Cliente </li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}

<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">LANÇAMENTO DE EVIDENCIAS</h4>
        <a href="@Url.Action("Requisitos", "RequisitosLegais", new { id= ViewBag.IDCliente })" class="btn btn-primary pull-right">
            <i class="fa icon-angle-left"></i> Voltar
        </a>
        <a></a>
        <a href="@Url.Action("Create", "Evidencias")" class="btn btn-success pull-right">
            <i class="fa icon-plus"></i> Cadastrar
        </a>

    </div>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <div class="card-body">
        <table class="table table-striped table-bordered table-responsive-sm datatable dataTable no-footer" id="companiesTable">
            <thead>
                <tr>
                    <th class="text-center"><span>Data da Avaliação</span></th>
                    <th class="text-center"><span>Avaliado por</span></th>
                    <th class="text-center"><span>Data da Validação</span></th>
                    <th class="text-center"><span>Validado por</span></th>
                    <th class="text-center"><span>Proxima Avaliação</span></th>
                    <th class="text-center"><span>Resultado</span></th>
                    <th class="text-center"><span>Evidencias de Atendimento</span></th>
                    <th class="text-center"><span>Ação</span></th>
                </tr>
            </thead>
            <tbody class="as_td">
                @foreach (var company in Model)
                {
                    <tr id="company-row-@company.id">
                        @*<td class="text-center">
                                <span class="label label-large label-@(company.Id > 0  ? "success" : "danger")">#@company.Id</span>
                            </td>*@
                        <td class="text-center">@company.DataAvaliacao.ToString("dd/MM/yyy")</td>
                        <td class="text-center">@company.Avaliado</td>
                        <td class="text-center">@company.DataValidacao.ToString("dd/MM/yyy")</td>
                        <td class="text-center">@company.Validado</td>
                        <td class="text-center">@company.ProxAvaliacao.ToString("dd/MM/yyy")</td>
                        <td>@company.Resultado</td>
                        <td>@company.Evidencias</td>
                        <td style="width: 150px;" class="text-center">
                            <a class="btn btn-success" title="Plano de Ação" href="@Url.Action("Index", "PlanoAcao", new { id=company.id, param=company.IDParametros, codci =company.IDCliente })">
                                <i class="fa fa-search-plus"></i>
                            </a>
                            <a class="btn btn-warning" title="Detalhes / Editar" href="@Url.Action("Details", "Evidencias", new { id=company.id })">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-danger" title="Excluir" href="@Url.Action("Delete", "Evidencias", new { id=company.id })">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section modals{
    <div id="modal-section"></div>
}
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/details.js"></script>
    <script src="~/Scripts/viewsjs/companyindex.js"></script>
    <script>
        $(document).ready(function () {
            initializeCompanyTable();
        });
    </script>
}



