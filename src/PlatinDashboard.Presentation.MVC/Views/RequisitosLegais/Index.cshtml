
@{
    ViewBag.Title = "Index";
}
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")
}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Requisitos Legais</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}
<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">Requisitos Legais</h4>
    </div>
    <div class="card-body">
        <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />

        <table class="table table-striped table-bordered table-responsive-sm datatable dataTable no-footer" id="companiesTable">
            <thead>
                <tr>
                    <th class="text-center">CNPJ</th>
                    <th class="text-center">Nome</th>
                    <th class="text-center">Tipo</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Data de Cadastro</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var company in Model)
                {
                    <tr id="company-row-@company.CompanyId" style="margin: 5px">
                        <td style="width: 150px;" class="text-center">@company.DatabaseUser </td>
                        <td   class="text-center">@company.Name</td>
                        <td  style="width: 50px;" class="text-center">@company.CompanyType</td>
                        <td style="width: 50px;" class="text-center"><span class="badge badge-success">Ativo</span></td>
                        <td style="width: 150px;" class="text-center">
                            @company.CreatedAt.ToString("dd/MM/yyyy")
                        </td>
                        <td style="width: 50px;" class="text-right">
                            <a class="btn btn-success" href="@Url.Action("Requisitos", "RequisitosLegais", new { id = company.CompanyId })">
                                <i class="fa fa-search-plus "></i>
                            </a>
                            @*<a class="btn btn-danger ladda-button" data-style="zoom-out" href="javascript:void(0)" onclick="showDeleteModal(this, @company.CompanyId)">
                                <i class="fa fa-trash-o "></i>
                            </a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section modals{
    <div id="modal-section">

    </div>
}
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/viewsjs/companyindex.js"></script>
    <script src="~/Scripts/viewsjs/changeclient.js"></script>
    <script>
        $(document).ready(function () {
            loadClientes();
            initializeCompanyTable();
        });
    </script>

}
