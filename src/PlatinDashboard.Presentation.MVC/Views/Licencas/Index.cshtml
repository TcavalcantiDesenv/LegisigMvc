@using PagedList.Mvc;
@using Model.Neg;
@model PagedList.IPagedList<Model.Entity.Licencas>
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")
}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Painel Geral</a>
        </li>
        <li class="breadcrumb-item active">Gestão de Licenças</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />

<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">Gestão de Licenças</h4>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered table-responsive-sm datatable dataTable no-footer" id="companiesTable">
            <thead>
                <tr>
                    <th class="text-center">Documento Legal</th>
                    <th class="text-center">Orgão</th>
                    <th class="text-center">Numero</th>
                    <th class="text-center">Emissão</th>
                    <th class="text-center">Validade</th>
                    <th class="text-center">Prazo de Alerta</th>
                    <th class="text-center">Observação</th>
                    @*<th class="text-center">Cliente</th>*@
                    <th class="text-center">Com Condicionantes ?</th>
                    <th class="text-center" style="width: 200px;">Ação</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var company in Model)
                {
                    <tr id="company-row-@company.Id" style="margin: 5px">
                        <td style="width: 200px;" class="text-center">@company.Licenca</td>
                        <td style="width: 100px;" class="text-center">@company.Orgao</td>
                        <td class="text-center"><span class="badge badge-success">@company.Numero</span></td>
                        <td style="width: 100px;" class="text-center">
                            @company.Emissao.ToString("dd/MM/yyyy")
                        </td>
                        <td style="width: 100px;" class="text-center">
                            @company.Validade.ToString("dd/MM/yyyy")
                        </td>
                        <td style="width: 100px;" class="text-center">
                            @company.Prazo
                        </td>
                        <td style="width: 100px;" class="text-center">
                            @company.Obs
                        </td>
                        @*<td style="width: 100px;" class="text-center">
                            @{
                                ClientesNeg clientesNeg = new ClientesNeg();
                                ViewBag.Cliente = clientesNeg.findAll().Where(c => c.Id == @company.IdCliente);
                            }
                            @company.IdCliente
                        </td>*@
                        <td style="width: 100px;" class="text-center">
                            @if (company.Condicionante == 1)
                            {
                                <span class="badge badge-success">Sim</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Não</span>
                            }
                        </td>
                        <td class="text-center" style="width: 200px;">
                            <a class="btn btn-success" title="Condicionantes" href="@Url.Action("Index", "PlanoAcao", new { id=company.Id })">
                                <i class="fa fa-search-plus"></i>
                            </a>
                            <a class="btn btn-warning" title="Detalhes / Editar" href="@Url.Action("Details", "Evidencias", new { id=company.Id })">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-danger" title="Excluir" href="@Url.Action("Delete", "Evidencias", new { id=company.Id })">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @*<iframe id="Iframe1" frameborder="0" scrolling="no" src="http://localhost:40351/Paginas/Licencas.aspx" width="100%" onload="setSize()" runat="server"></iframe>*@

    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/unobstrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/coreui/ladda/js")
    @Scripts.Render("~/coreui/datatables/js")
    <script src="~/Scripts/viewsjs/index.js"></script>
    <script src="~/Scripts/viewsjs/companyindex.js"></script>
    <script src="~/Scripts/viewsjs/changeclient.js"></script>
    <script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js?ver=1.3.2'></script>

    <script>
        $(document).ready(function () {
            loadClientes();
            initializeCompanyTable();
        });

        function setSize() {
            var iframeElement = parent.document.getElementById('Iframe1');
            var height = document.documentElement.clientHeight - 100;
            iframeElement.style.height = height + "px";
        }

    </script>
}

