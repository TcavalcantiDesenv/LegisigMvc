
@model Model.Entity.ParametrosCliente
<div class="card-body" id="form-content">

    @using (Html.BeginForm())
    {

        <div class="row">
            <div class="form-group col-sm-6">
                @Html.TextBoxFor(model => model.IDCliente, new { style = "display:none" })
            </div>
            <div class="form-group col-sm-6">
                @Html.TextBoxFor(model => model.IDLegisGeral, new { style = "display:none" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-2">
                @Html.LabelFor(model => model.Numero)
                @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", placeholder = "Capitulo" } })
                @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "error invalid-feedback" })
            </div>
            <div class="form-group col-sm-5">
                @Html.LabelFor(model => model.Capitulo)
                @Html.TextAreaFor(m => m.Capitulo, 3, 50, new { @class = "form-control", @readonly = "readonly", })
                @Html.ValidationMessageFor(model => model.Capitulo, "", new { @class = "error invalid-feedback" })
            </div>
            <div class="form-group col-sm-5">
                @Html.LabelFor(model => model.Item)
                @Html.TextAreaFor(m => m.Item, 3, 50, new { @class = "form-control", @readonly = "readonly", })
                @Html.ValidationMessageFor(model => model.Item, "", new { @class = "error invalid-feedback" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Parametro)
            @Html.TextAreaFor(m => m.Parametro, 8, 50, new { @class = "form-control", @readonly = "readonly", })
            @Html.ValidationMessageFor(model => model.Parametro, "", new { @class = "error invalid-feedback" })
        </div>
        <div class="row">
            <div class="form-group col-sm-4">
                <div class="form-group col-sm-6">
                    @Html.LabelFor(model => model.Aplicavel)
                    @Html.DropDownListFor(model => model.Aplicavel, new SelectList(
                   new List<Object>{
                           new { value = 0 , text = "Não"  },
                           new { value = 1 , text = "Sim" }
                     },
                   "value",
                   "text",
                    2))
                </div>
            </div>
            <div class="form-group col-sm-4">
                <div class="form-group col-sm-6">
                    @Html.LabelFor(model => model.Obrigacao)
                    @Html.DropDownListFor(model => model.Obrigacao, new SelectList(
                   new List<Object>{
                           new { value = 0 , text = "Não"  },
                           new { value = 1 , text = "Sim" }
                     },
                   "value",
                   "text",
                    2))
                </div>
            </div>
            <div class="form-group col-sm-4">
                <div class="form-group col-sm-8">
                    @Html.LabelFor(model => model.Conhecimento)
                    @Html.DropDownListFor(model => model.Conhecimento, new SelectList(
                   new List<Object>{
                           new { value = 0 , text = "Não"  },
                           new { value = 1 , text = "Sim" }
                     },
                   "value",
                   "text",
                    2))
                </div>
            </div>
        </div>
        <div class="form-actions col-md-offset-2">
            <input class="btn btn-success" type="submit" name="btnsalvar" value="Salvar" />
        </div>
    }
</div>


