<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">Ultimos 10 Acessos do Dia</h4>
    </div>
    <div class="card-body">
        <table class="table table-responsive-sm table-hover table-outline mb-0" id="usersTable">
            <thead class="thead-light">
                <tr>
                    <th class="text-center">
                        <i class="icon-people"></i>
                    </th>
                    <th>Nome</th>
                    <th>Usuário</th>
                    <th>Cliente</th>
                    <th>IP</th>
                    <th>Data Acesso</th>
                    @*<th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var user in ViewBag.Acessos)
                {
                    <tr>
                        <td class="text-center">
                            <div class="avatar">
                                <div class="user-initial">
                                    <span>@user.Nome[0].ToString().ToUpper()</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div>@user.Nome</div>
                            <div class="small text-muted">
                                Acessado em: @user.DataEntrada.ToString("dd/MM/yyyy")
                            </div>
                        </td>
                        <td>
                            @user.Usuario
                        </td>
                        <td>
                            @user.Empresa
                        </td>
                        <td>
                            @user.IP
                        </td>
                        <td>
                            @user.DataEntrada
                        </td>
                        @*<td class="text-right">
                            <a class="btn btn-success" href="@Url.Action("Detalhes", "Usuarios", new { id = user.IP })">
                                <i class="fa fa-search-plus "></i>
                            </a>
                            <a class="btn btn-danger ladda-button" data-style="zoom-out" href="javascript:void(0)" onclick="showDeleteModal(this, '@user.IP')">
                                <i class="fa fa-trash-o "></i>
                            </a>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
