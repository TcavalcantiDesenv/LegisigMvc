@model Model.Entity.Sistemas

@{
    ViewBag.Title = "Details";
}
@section styles{
    @Styles.Render("~/coreui/ladda/css")
    @Styles.Render("~/coreui/datatables/css")
}
@section breadcrumb{
    <!-- Breadcrumb-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Sistemas</li>
        <!-- Breadcrumb Menu-->
        <li class="breadcrumb-menu d-md-down-none">
            <div class="btn-group" role="group" aria-label="Button group">
                <a class="btn" href="javascript:void(0)">
                    Olá @User.Identity.Name !
                </a>
            </div>
        </li>
    </ol>
}
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
<div class="card">
    <div class="card-header">
        <h4 style="display: inline-block">Cadastro de Sistemas</h4>
        <a href="@Url.Action("Index", "Sistemas")" class="btn btn-primary pull-right">
            <i class="fa icon-plus"></i> Voltar
        </a>
    </div>
    <div class="card-body">

        <div>
            <h4>Detalhes</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Sistema)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Sistema)
                </dd>

            </dl>
        </div>
        <p>
            <a href="@Url.Action("Edit", "Sistemas", new { id = Model.Id })" class="btn btn-warning pull-right">
                <i class="fa icon-plus"></i> Editar
            </a>
        </p>
    </div>
</div>